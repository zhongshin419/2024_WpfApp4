				<MenuItem Header="結束" FontSize="14" Height="28" VerticalAlignment="Center"/>

			</MenuItem>
		</Menu>
		<ToolBarTray Height="40" DockPanel.Dock="Top">
			<ToolBar Height="38" Width="300" Background="Ivory">

			</ToolBar>
		</ToolBarTray>
		<Canvas DockPanel.Dock="Top" Height="500" Background="#FFF7F3DE" />

	</DockPanel>

</Window>
